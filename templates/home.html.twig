{% extends 'base.html.twig'%}

{% block title %}
    <title>Bienvenue sur notre blog</title>
{% endblock %}

{% block main %}
    <h1>Bienvenue</h1>
    <section>
        <form action="{{ path('home') }}" method="get">
            <label for="age">Quel est votre age ?</label>
            <input type="text" name="age">
            <button>Valider</button>
        </form>
    </section>
    <section>
        <div  id="articles">
            {% for article in articles | filter(article => article.isPublished) | slice(0,3) %}
                {% include 'admin/_article.html.twig' %}
            {% endfor %}
        </div>
    </section>
{% endblock %}

{% block footer %}
    <p>Bienvenue sur notre blog</p>
{% endblock %}